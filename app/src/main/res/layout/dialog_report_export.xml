<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="20sp">
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Periode"/>
    <RadioGroup android:orientation="horizontal" android:id="@+id/rdPeriodType" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RadioButton android:id="@+id/rdBtnDate" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true" android:text="Tanggal" android:layout_weight="1"/>
        <RadioButton android:id="@+id/rdBtnMonth" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Bulan" android:layout_weight="1"/>
    </RadioGroup>
    <Button android:id="@+id/btnDate" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/layoutMonthYear" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
        <Spinner android:id="@+id/spinMonth" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"/>
        <Spinner android:id="@+id/spinYear" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/layoutReportType" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Jenis Laporan"/>
        <Spinner android:id="@+id/spinReportType" android:layout_width="match_parent" android:layout_height="wrap_content" android:inputType="text"/>
    </LinearLayout>
</LinearLayout>
